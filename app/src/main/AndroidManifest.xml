<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools">

	<application
		android:allowBackup="true"
		android:dataExtractionRules="@xml/data_extraction_rules"
		android:fullBackupContent="@xml/backup_rules"
		android:icon="@mipmap/ic_launcher"
		android:label="@string/app_name"
		android:roundIcon="@mipmap/ic_launcher_round"
		android:supportsRtl="true"
		android:theme="@style/Theme.Flicks"
		tools:targetApi="31">
		<activity
			android:name=".ui.activities.FavoriteMovieActivity"
			android:exported="false"
			android:screenOrientation="locked"/>
		<activity
			android:name=".ui.activities.CategoryMovieActivity"
			android:exported="false"
			android:screenOrientation="locked"/>
		<activity
			android:name=".ui.activities.DetailMovieActivity"
			android:exported="false"
			android:screenOrientation="locked"/>
		<activity
			android:name=".ui.activities.SearchedMovieActivity"
			android:exported="false"
			android:screenOrientation="locked"/>
		<activity
			android:name=".ui.auth.SplashActivity"
			android:exported="false"/>
		<activity
			android:name=".ui.auth.SignInActivity"
			android:exported="false"
			android:screenOrientation="locked"/>
		<activity
			android:name=".ui.auth.SignUpActivity"
			android:exported="false"
			android:screenOrientation="locked"/>
		<activity
			android:name=".ui.onboard.OnboardActivity"
			android:exported="false"
			android:screenOrientation="locked"/>
		<activity
			android:name=".MainActivity"
			android:exported="true"
			android:screenOrientation="locked">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />

				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
	</application>

</manifest>